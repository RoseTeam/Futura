<?xml version="1.0"?>
<robot name="futurakart" xmlns:xacro="http://ros.org/wiki/xacro">

    <!-- Include macros -->
    <xacro:include filename="$(find futurakart_description)/urdf/macros/model.urdf" />
    <xacro:include filename="$(find futurakart_description)/urdf/macros/kinect.urdf" />

    <!-- Bring in simulation data for Gazebo. -->
    <xacro:include filename="$(find futurakart_description)/urdf/futurakart.gazebo" />

    <!--**************************************************************************-->
    <!--                     Define links and joints                              -->
    <!--**************************************************************************-->

    <!-- Center of the Kart -->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="${base_width} ${base_length} ${base_height}"/>
            </geometry>
            <origin xyz="0 ${track/2} ${wheel_radius}"/>
            <material name="yellow" />
        </visual>

    </link>

    <!-- Center of the Kart projected on the floor-->
    <link name="base_footprint" />
    <joint name="base_link_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 ${track/2} -${vertical_offset}"/>
    </joint>



    <!--**************************************************************************-->
    <!--Define 4 wheels-->
    <!--**************************************************************************-->

    <xacro:wheel prefix="front_left">
        <origin xyz="${-wheelbase_front/2} ${track} ${wheel_vertical_offset}" rpy="0 0 0" />
    </xacro:wheel>
    <xacro:wheel prefix="front_right">
        <origin xyz="${wheelbase_front/2} ${track} ${wheel_vertical_offset}" rpy="0 0 0" />
    </xacro:wheel>
    <xacro:wheel prefix="rear_left">
        <origin xyz="${-wheelbase_rear/2} 0 ${wheel_vertical_offset}" rpy="0 0 0" />
    </xacro:wheel>
    <xacro:wheel prefix="rear_right">
        <origin xyz="${wheelbase_rear/2} 0 ${wheel_vertical_offset}" rpy="0 0 0" />
    </xacro:wheel>

    <!--**************************************************************************-->
    <!--Define front steering transmission -->
    <!--**************************************************************************-->

