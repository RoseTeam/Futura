<?xml version="1.0"?>
<!--
    Robot parts transformations nodes

	<node name="node_name" 
		pkg="tf" 
		type="static_transform_publisher" 
		args="x y z q1 q2 q3 q4 CS_parent_name CS_child_name period_in_ms"/> 
    
    x,y,z in meters

    For more details, see http://wiki.ros.org/navigation/Tutorials/RobotSetup/TF 
    
    Coordinate system definitions : http://www.ros.org/reps/rep-0120.html#coordinate-frames
     
-->
<launch>

    <arg name="base_kinect_link" default="camera_link"/>

    <!-- Transformation between Kart center and its projection on the floor -->
	<node name="base_link_to_footprint_tf"
		pkg="tf" 
		type="static_transform_publisher" 
		args="0.0 0.0 -0.25 0.0 0.0 0.0 1.0 base_link base_footprint 20" /> 

    <!-- Transformation between Kart center and the Kinect sensor position -->
	<node name="base_link_to_kinect_tf"
		pkg="tf" 
		type="static_transform_publisher" 
		args="0.4 0.0 0.2 0.0 0.0 0.0 1.0 base_link $(arg base_kinect_link) 20" /> 

	<!--node name="base_kinect_rgb_tf"
		pkg="tf"
		type="static_transform_publisher"
		args="0.0 -0.05 0.0 -0.5 0.5 -0.5 0.5 base_kinect kinect_rgb_frame 20" />

	<node name="base_kinect_depth_tf"
		pkg="tf"
		type="static_transform_publisher"
		args="0.0 0.05 0.0 -0.5 0.5 -0.5 0.5 base_kinect kinect_depth_frame 20" /-->

</launch>
